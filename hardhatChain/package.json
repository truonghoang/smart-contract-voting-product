{
  "name": "hardhat-project",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "hardhat": "^2.22.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.2",
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "client":"cd client-voting-smart-contract && npm install ",
    "chain": "npm install",
